# Anomaly Reaper Configuration
# Copy this file to .env and fill in your actual values

# Application settings
ANOMALY_REAPER_APP_NAME=Anomaly Reaper
ANOMALY_REAPER_HOST=127.0.0.1
ANOMALY_REAPER_PORT=8000
ANOMALY_REAPER_LOG_LEVEL=info

# Database settings
ANOMALY_REAPER_DB_URL=sqlite:///./anomaly_reaper.db

# Model settings
ANOMALY_REAPER_ANOMALY_THRESHOLD=0.05

# Google Cloud Configuration
ANOMALY_REAPER_PROJECT_ID=your-gcp-project-id
ANOMALY_REAPER_LOCATION=us-central1
ANOMALY_REAPER_GCS_BUCKET_NAME=your-gcs-bucket-name
ANOMALY_REAPER_GCS_IMAGES_PREFIX=anomaly_reaper/images
ANOMALY_REAPER_GCS_USE_PUBLIC_URLS=true

# Optional: Path to GCP service account key file
# ANOMALY_REAPER_GCP_SERVICE_ACCOUNT_PATH=/path/to/service-account-key.json

# Set to true to use Google Cloud Storage instead of local files
ANOMALY_REAPER_USE_CLOUD_STORAGE=false